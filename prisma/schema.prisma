generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Staff/Admin Users (Authentication)
enum Role {
  ADMIN
  STAFF
}

model User {
  id        String   @id // Clerk user_id
  email     String   @unique
  name      String?
  role      Role     @default(STAFF)
  createdAt DateTime @default(now())
}

// ----------------------------------------------------------------------------

// Student Record (Data only, no login)
model Student {
  id          String   @id @default(cuid())
  
  // Personal Info
  fullName    String
  email       String?
  phone       String?
  address     String?
  course      String?
  
  // Financials
  totalFee    Decimal  @default(0) // Total course fee in EUR
  currency    String   @default("EUR")
  
  // Meta
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  documents   StudentDocument[]
  payments    Payment[]
}

// ----------------------------------------------------------------------------

// Payment / Ledger
enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CREDIT_CARD
}

model Payment {
  id          String        @id @default(cuid())
  amount      Decimal
  date        DateTime      @default(now())
  method      PaymentMethod @default(CASH)
  note        String?       // e.g. "Installment 1", "Registration Fee"
  
  // Relations
  studentId   String
  student     Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime      @default(now())
}

// ----------------------------------------------------------------------------

// Documents
enum DocCategory {
  OFFICE   // Internal docs (Contracts, forms)
  STUDENT  // Personal docs (Passport, ID)
}

model DocumentType {
  id          String      @id @default(cuid())
  title       String
  description String?
  category    DocCategory @default(STUDENT)
  isRequired  Boolean     @default(true)
  
  documents   StudentDocument[]
}

model StudentDocument {
  id        String   @id @default(cuid())
  title     String?  // Optional override or custom name
  fileUrl   String
  fileType  String   // pdf, img, etc.
  
  // No approval status needed for internal CRM - upload means valid
  
  expiryDate DateTime?
  createdAt  DateTime  @default(now())

  // Relations
  studentId      String
  student        Student      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  documentTypeId String
  documentType   DocumentType @relation(fields: [documentTypeId], references: [id])
}

model Course {
  id        String   @id @default(cuid())
  title     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
