generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Staff/Admin Users (Authentication)
enum Role {
  ADMIN
  STAFF
}

model User {
  id        String   @id // Clerk user_id
  email     String   @unique
  name      String?
  role      Role     @default(STAFF)
  createdAt DateTime @default(now())
}

// ----------------------------------------------------------------------------

// ... existing imports

// ----------------------------------------------------------------------------

// Student Record (Data only, no login)
enum StudentStatus {
  REGISTERED
  ONGOING
  EXAM_PHASE
  DOCS_PENDING
  GRADUATED
  CANCELLED
}

model Student {
  id          String   @id @default(cuid())
  
  // Personal Info
  fullName    String
  email       String?
  phone       String?
  address     String?
  course      String?
  
  status      StudentStatus @default(REGISTERED)
  
  // Financials
  totalFee    Decimal  @default(0) // Total course fee in EUR
  currency    String   @default("EUR")
  
  // Magic Link for Uploads
  uploadToken       String?   @unique
  uploadTokenExpiry DateTime?
  
  // Meta
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  documents   StudentDocument[]
  payments    Payment[]
}

// ----------------------------------------------------------------------------

enum InstructorEmploymentType {
  FULL_TIME
  PART_TIME
}

model Instructor {
  id          String   @id @default(cuid())
  fullName    String
  email       String?
  phone       String?
  bio         String?
  specialties String?  // Comma separated or simplified text
  employmentType InstructorEmploymentType @default(FULL_TIME)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  documents   InstructorDocument[]
  events      CourseEvent[]
}

model InstructorDocument {
  id        String   @id @default(cuid())
  title     String? 
  fileUrl   String
  fileType  String   
  
  createdAt  DateTime  @default(now())

  instructorId   String
  instructor     Instructor @relation(fields: [instructorId], references: [id], onDelete: Cascade)

  documentTypeId String?
  documentType   DocumentType? @relation(fields: [documentTypeId], references: [id])
}

// ----------------------------------------------------------------------------

model CourseEvent {
  id        String   @id @default(cuid())
  title     String
  
  startDate DateTime
  endDate   DateTime
  location  String?
  
  color     String?  // For UI coloring

  // Relations
  instructorId String?
  instructor   Instructor? @relation(fields: [instructorId], references: [id])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  checklist EventChecklistItem[]
}

model EventChecklistItem {
  id            String      @id @default(cuid())
  label         String
  isCompleted   Boolean     @default(false)
  
  courseEventId String
  courseEvent   CourseEvent @relation(fields: [courseEventId], references: [id], onDelete: Cascade)
}

// ----------------------------------------------------------------------------

// Payment / Ledger
enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CREDIT_CARD
}

model Payment {
  id          String        @id @default(cuid())
  amount      Decimal
  date        DateTime      @default(now())
  method      PaymentMethod @default(CASH)
  note        String?       // e.g. "Installment 1", "Registration Fee"
  
  // Relations
  studentId   String
  student     Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime      @default(now())
}

// ----------------------------------------------------------------------------

// Documents
enum DocCategory {
  OFFICE       // Internal docs
  STUDENT      // Personal docs
  CERTIFICATE  // New Category 1
  MEDICAL      // New Category 2
  INSTRUCTOR   // Instructor docs
}

enum DocumentStatus {
  PENDING
  APPROVED
  REJECTED
}

model DocumentType {
  id          String      @id @default(cuid())
  title       String
  description String?
  category    DocCategory @default(STUDENT)
  isRequired  Boolean     @default(true)
  
  documents   StudentDocument[]
  instructorDocuments InstructorDocument[]
}

model StudentDocument {
  id        String   @id @default(cuid())
  title     String?  // Optional override or custom name
  fileUrl   String
  fileType  String   // pdf, img, etc.
  
  status     DocumentStatus @default(APPROVED)
  
  expiryDate DateTime?
  createdAt  DateTime  @default(now())

  // Relations
  studentId      String
  student        Student      @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  documentTypeId String
  documentType   DocumentType @relation(fields: [documentTypeId], references: [id])
}

model Course {
  id        String   @id @default(cuid())
  title     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

